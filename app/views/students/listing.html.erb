 <h1>Students</h1>

<table>
 <thead>
   <tr>
      <th colspan="3"></th>
     <th>Name</th>
     <th>address</th>
     <th>email</th>
     
   </tr>
 </thead>

 <tbody>
   <% @student.each do |student| %>
     <tr>
     <td colspan="2"></td>
      <td><%= link_to student.name, details_path(id: student.id)%></td>

       <td><%= student.name %></td>
       <td><%= student.address %></td>
       <td><%= student.email%></td>

     </tr>
   <% end %>
 </tbody>
</table>

<br>